# Production environment configuration
# Copy this file to .env.production and fill in the values

# OIDC Configuration
VITE_OIDC_AUTHORITY=https://auth.webank.cm/realms/fineract
VITE_OIDC_CLIENT_ID=self-service-app
VITE_OIDC_REDIRECT_URI=https://self-service.webank.cm/callback
VITE_OIDC_POST_LOGOUT_URI=https://self-service.webank.cm

# API Configuration
VITE_API_BASE_URL=https://api.webank.cm

# OpenTelemetry Configuration (optional)
# Set this to enable browser tracing
VITE_OTEL_EXPORTER_OTLP_ENDPOINT=https://otel.webank.cm

# App Version (set during CI/CD)
VITE_APP_VERSION=1.0.0
