{
	"name": "banking-system-monorepo",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"packageManager": "pnpm@10.24.0",
	"scripts": {
		"dev": "pnpm --parallel --filter \"./frontend/*\" dev",
		"build": "pnpm --filter \"./packages/ui\" build && pnpm --filter \"./frontend/*\" build",
		"lint": "biome check .",
		"format": "biome format --write .",
		"fix": "pnpm format && pnpm biome check --write .",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"prepare": "husky",
		"postinstall": "pnpm codegen",
		"codegen": "pnpm --filter @fineract-apps/fineract-api codegen",
		"dev:mifos": "cd frontend/mifos-web-app && npm start",
		"build:mifos": "cd frontend/mifos-web-app && npm run build",
		"test:mifos": "cd frontend/mifos-web-app && npm test",
		"install:mifos": "cd frontend/mifos-web-app && npm install"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.6",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@tailwindcss/vite": "^4.1.17",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/jest": "^30.0.0",
		"@types/react": "^19.2.6",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react-swc": "^4.2.2",
		"husky": "^9.1.7",
		"jest": "^30.2.0",
		"jest-environment-jsdom": "^30.2.0",
		"tailwindcss": "^4.1.17",
		"ts-jest": "^29.4.5",
		"typescript": "~5.9.3",
		"vite": "^7.2.4"
	}
}
