{
	"name": "banking-system-monorepo",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "pnpm --parallel --filter \"./frontend/*\" dev",
		"build": "pnpm --filter \"./packages/ui\" build && pnpm --filter \"./frontend/*\" build",
		"lint": "biome check .",
		"format": "biome format --write .",
		"fix": "pnpm format && pnpm biome check --write .",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"prepare": "husky",
		"postinstall": "pnpm codegen",
		"codegen": "pnpm --filter @fineract-apps/fineract-api codegen"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.3",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@tailwindcss/vite": "^4.1.13",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/jest": "^29.5.12",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@vitejs/plugin-react-swc": "^4.0.0",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"tailwindcss": "^4.1.13",
		"ts-jest": "^29.4.1",
		"typescript": "~5.8.3",
		"vite": "^7.1.2"
	}
}
